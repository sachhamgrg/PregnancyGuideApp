    <ConstraintSet android:id="@+id/startN">
    </ConstraintSet>


    <ConstraintSet android:id="@+id/endN1">
        <Constraint
            android:id="@+id/imageViewNutrition1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@+id/imageViewNutrition2"
            android:visibility="invisible"/>
        <Constraint
            android:id="@+id/imageViewNutrition3"
            android:visibility="invisible"/>
        <Constraint
            android:id="@+id/imageViewNutrition4"
            android:visibility="invisible"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endN2">
        <Constraint
            android:id="@+id/imageViewNutrition2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
