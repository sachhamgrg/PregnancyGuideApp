<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- Transition for Image 1-->
    <Transition
        motion:constraintSetEnd="@+id/endN1"
        motion:constraintSetStart="@id/startN"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/imageViewNutrition1" />
    </Transition>

    <!-- Transition for Image 2-->
    <Transition
        motion:constraintSetEnd="@+id/endN2"
        motion:constraintSetStart="@id/startN"
        motion:duration="1000">
        <KeyFrameSet>
