<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nutrition"
            android:textAlignment="center"
            android:textColor="@color/ss2"
            app:drawableStartCompat="@drawable/ic_love"
            app:drawableEndCompat="@drawable/ic_nutrition"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:padding="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtNutritionAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardView_bg"
                android:text="@string/nutrition_do_dont"
                android:gravity="center"
                android:textColor="@color/bP_txtColor"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="serif"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/ss2"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardView_bg"
                android:text="@string/exercise"
                android:gravity="center"
                android:textColor="@color/bP_txtColor"
                android:textStyle="bold"
                android:textSize="30sp"
                android:fontFamily="serif"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>