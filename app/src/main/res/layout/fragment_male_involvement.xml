<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/male_involvement"
        android:textColor="@color/ss2"
        app:drawableStartCompat="@drawable/ic_love"
        app:drawableEndCompat="@drawable/ic_male_involvement"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="serif"
        android:padding="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPlanningAPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardView_bg"
                    android:text="@string/planning_a_pregnancy"
                    android:gravity="center"
                    android:textColor="@color/bP_txtColor"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:fontFamily="serif"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"/>

                <LinearLayout
                    android:id="@+id/layout_PlanningAPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageViewPlanningAPregnancy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_image" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/ss2" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGettingInvolvedInAPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardView_bg"
                    android:text="@string/getting_involved_in_a_pregnancy"
                    android:gravity="center"
                    android:textColor="@color/bP_txtColor"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:fontFamily="serif"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"/>

                <LinearLayout
                    android:id="@+id/layout_GettingInvolvedInAPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageViewGettingInvolvedInAPregnancy1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_image" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/light_grey"
                        android:layout_margin="10dp"/>

                    <ImageView
                        android:id="@+id/imageViewGettingInvolvedInAPregnancy2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_image" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/light_grey"
                        android:layout_margin="10dp"/>

                    <ImageView
                        android:id="@+id/imageViewGettingInvolvedInAPregnancy3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_image" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/ss2" />

        <TextView
            android:id="@+id/txtViewPC_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/youtube_videos_help"
            android:textColor="@color/ss2"
            android:background="@drawable/border_views"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:padding="10dp"/>

        <Button
            android:id="@+id/textView_How_to_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/alegreya_bold_italic"
            android:layout_margin="10dp"
            android:text="@string/how_to_support_your_partner_during_pregnancy"
            android:backgroundTint="@color/cardView_bg"
            android:textColor="@color/bP_txtColor"
            android:textSize="24sp" />

        <Button
            android:id="@+id/textView_Your_first__few_days_as_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/alegreya_bold_italic"
            android:layout_margin="10dp"
            android:text="@string/your_first_few_days_as_a_parent"
            android:backgroundTint="@color/cardView_bg"
            android:textColor="@color/bP_txtColor"
            android:textSize="24sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/ss2" />

    </LinearLayout>

</ScrollView>